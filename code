JAVASCRIPT

// Store users in memory (in a real app, this would be a backend database)
let users = {};
let currentUser = null;

// Healthcare responses database
const healthcareResponses = {
    'headache': 'For headaches, ensure you stay hydrated, get adequate rest, and manage stress. If headaches persist or worsen, please consult a healthcare provider.',
    'fever': 'If you have a fever, rest, stay hydrated, and monitor your temperature. Seek medical attention if fever exceeds 103°F (39.4°C) or lasts more than 3 days.',
    'cold': 'For cold symptoms, get plenty of rest, drink fluids, and use over-the-counter medications as needed. If symptoms worsen or persist beyond 10 days, consult a doctor.',
    'cough': 'For a cough, stay hydrated, use honey or cough drops, and avoid irritants. If cough persists for more than 3 weeks or includes blood, seek medical attention.',
    'pain': 'For general pain, rest the affected area, apply ice or heat as appropriate, and consider over-the-counter pain relievers. Persistent pain should be evaluated by a healthcare provider.',
    'stress': 'To manage stress, practice deep breathing, exercise regularly, maintain a healthy sleep schedule, and consider meditation or talking to a counselor.',
    'sleep': 'For better sleep, maintain a consistent schedule, create a relaxing bedtime routine, limit screen time before bed, and keep your bedroom cool and dark.',
    'diet': 'A balanced diet includes fruits, vegetables, whole grains, lean proteins, and healthy fats. Stay hydrated and limit processed foods, sugar, and excessive salt.',
    'exercise': 'Aim for at least 150 minutes of moderate aerobic activity or 75 minutes of vigorous activity per week, plus muscle-strengthening activities twice a week.',
    'appointment': 'I recommend scheduling an appointment with your healthcare provider for personalized medical advice and treatment.',
    'emergency': '⚠️ If you\'re experiencing a medical emergency, please call emergency services (911 in the US) immediately or go to the nearest emergency room.',
    'medicine': 'For medication advice, please consult with your doctor or pharmacist. They can provide personalized recommendations based on your medical history.',
    'diabetes': 'Managing diabetes involves monitoring blood sugar, following a healthy diet, exercising regularly, and taking medications as prescribed. Regular check-ups with your doctor are essential.',
    'blood pressure': 'To manage blood pressure, reduce sodium intake, exercise regularly, maintain a healthy weight, limit alcohol, and manage stress. Monitor your BP regularly.',
    'anxiety': 'For anxiety, try deep breathing exercises, regular physical activity, adequate sleep, and limiting caffeine. Consider speaking with a mental health professional for support.',
    'depression': 'If you\'re experiencing depression, please reach out to a mental health professional. Regular exercise, social connections, and proper sleep can also help. You\'re not alone.',
    'allergy': 'For allergies, identify and avoid triggers, use antihistamines as needed, and keep your living space clean. Severe allergies may require consultation with an allergist.',
    'asthma': 'Manage asthma by avoiding triggers, using prescribed inhalers correctly, and having an action plan. Regular follow-ups with your doctor are important.',
    'weight': 'Healthy weight management involves balanced nutrition, regular physical activity, adequate sleep, and stress management. Consult a healthcare provider for personalized guidance.',
    'vitamin': 'A balanced diet usually provides necessary vitamins. If considering supplements, consult your healthcare provider to determine what\'s appropriate for your needs.',
    'default': 'I\'m here to provide general health information. For specific medical concerns, please consult with a qualified healthcare provider. How else can I assist you with health-related questions?'
};

// Show register form
function showRegister() {
    document.getElementById('loginForm').classList.remove('active');
    document.getElementById('registerForm').classList.add('active');
    document.getElementById('loginError').classList.remove('show');
    document.getElementById('registerError').classList.remove('show');
}

// Show login form
function showLogin() {
    document.getElementById('registerForm').classList.remove('active');
    document.getElementById('loginForm').classList.add('active');
    document.getElementById('loginError').classList.remove('show');
    document.getElementById('registerError').classList.remove('show');
}

// Register function
function register() {
    const name = document.getElementById('registerName').value.trim();
    const email = document.getElementById('registerEmail').value.trim();
    const password = document.getElementById('registerPassword').value;
    const confirmPassword = document.getElementById('registerConfirmPassword').value;
    const errorElement = document.getElementById('registerError');

    if (!name || !email || !password || !confirmPassword) {
        errorElement.textContent = 'Please fill in all fields';
        errorElement.classList.add('show');
        return;
    }

    if (password !== confirmPassword) {
        errorElement.textContent = 'Passwords do not match';
        errorElement.classList.add('show');
        return;
    }

    if (password.length < 6) {
        errorElement.textContent = 'Password must be at least 6 characters';
        errorElement.classList.add('show');
        return;
    }

    if (users[email]) {
        errorElement.textContent = 'Email already registered';
        errorElement.classList.add('show');
        return;
    }

    users[email] = { name, email, password };
    errorElement.classList.remove('show');
    alert('Registration successful! Please login.');
    
    // Clear form fields
    document.getElementById('registerName').value = '';
    document.getElementById('registerEmail').value = '';
    document.getElementById('registerPassword').value = '';
    document.getElementById('registerConfirmPassword').value = '';
    
    showLogin();
}

// Login function
function login() {
    const email = document.getElementById('loginEmail').value.trim();
    const password = document.getElementById('loginPassword').value;
    const errorElement = document.getElementById('loginError');

    if (!email || !password) {
        errorElement.textContent = 'Please fill in all fields';
        errorElement.classList.add('show');
        return;
    }

    if (!users[email] || users[email].password !== password) {
        errorElement.textContent = 'Invalid email or password';
        errorElement.classList.add('show');
        return;
    }

    currentUser = users[email];
    errorElement.classList.remove('show');
    
    // Clear login fields
    document.getElementById('loginEmail').value = '';
    document.getElementById('loginPassword').value = '';
    
    showChatInterface();
}

// Show chat interface
function showChatInterface() {
    document.getElementById('loginForm').classList.remove('active');
    document.getElementById('chatContainer').classList.add('active');
    const avatar = document.getElementById('userAvatar');
    avatar.textContent = currentUser.name.charAt(0).toUpperCase();
}

// Logout function
function logout() {
    currentUser = null;
    document.getElementById('chatContainer').classList.remove('active');
    document.getElementById('loginForm').classList.add('active');
    document.getElementById('chatBox').innerHTML = '<div class="message bot-message">Hello! I\'m AIHC, your AI Healthcare assistant. How can I help you today?</div>';
    document.getElementById('chatInput').value = '';
}

// Send message function
function sendMessage() {
    const input = document.getElementById('chatInput');
    const message = input.value.trim();

    if (!message) return;

    // Add user message
    addMessage(message, 'user-message');
    input.value = '';

    // Simulate bot thinking
    setTimeout(() => {
        const response = generateResponse(message);
        addMessage(response, 'bot-message');
    }, 500);
}

// Add message to chat
function addMessage(text, className) {
    const chatBox = document.getElementById('chatBox');
    const messageDiv = document.createElement('div');
    messageDiv.className = `message ${className}`;
    messageDiv.textContent = text;
    chatBox.appendChild(messageDiv);
    chatBox.scrollTop = chatBox.scrollHeight;
}

// Generate bot response
function generateResponse(message) {
    const lowerMessage = message.toLowerCase();

    // Check for greetings
    if (lowerMessage.match(/\b(hi|hello|hey|good morning|good afternoon|good evening)\b/)) {
        return `Hello ${currentUser.name}! How can I assist you with your health today?`;
    }

    // Check for thanks
    if (lowerMessage.match(/\b(thank|thanks|appreciate)\b/)) {
        return 'You\'re welcome! Is there anything else I can help you with?';
    }

    // Check for goodbye
    if (lowerMessage.match(/\b(bye|goodbye|see you)\b/)) {
        return 'Take care! Remember to prioritize your health. Feel free to come back anytime!';
    }

    // Check for help
    if (lowerMessage.match(/\b(help|what can you do)\b/)) {
        return 'I can provide information about common health topics including: headaches, fever, cold, cough, pain, stress, sleep, diet, exercise, allergies, diabetes, blood pressure, anxiety, and more. Just ask me about any health concern!';
    }

    // Check healthcare keywords
    for (let keyword in healthcareResponses) {
        if (lowerMessage.includes(keyword)) {
            return healthcareResponses[keyword];
        }
    }

    return healthcareResponses['default'];
}

// Handle Enter key press
function handleKeyPress(event) {
    if (event.key === 'Enter') {
        sendMessage();
    }
}










